# Google API Configuration
GOOGLE_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration
MONITORING_INTERVAL_SECONDS=60
RESPONSE_TIME_THRESHOLD_MS=1000
ERROR_RATE_THRESHOLD_PERCENT=5.0
CPU_THRESHOLD_PERCENT=80.0
MEMORY_THRESHOLD_PERCENT=85.0

# Recovery Configuration
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD_ERRORS=10
CIRCUIT_BREAKER_TIMEOUT_SECONDS=60
ENABLE_AUTOMATIC_ROLLBACK=true
ENABLE_STATE_RESTORATION=true
MAX_RECOVERY_ATTEMPTS=3

# Compliance Configuration
ENABLE_AUDIT_LOGGING=true
ENABLE_IMMUTABLE_LOGS=true
SLA_TARGET_UPTIME_PERCENT=99.7
SLA_CHECK_INTERVAL_MINUTES=60
RETENTION_DAYS=90

# Notification Channels
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your-pagerduty-api-key
EMAIL_SENDER=alerts@example.com
EMAIL_RECIPIENTS=ops-team@example.com

# Deployment Configuration
DEPLOYMENT_PLATFORM=cloud_run
DEPLOYMENT_REGION=us-central1
STAGING_BUCKET=gs://your-staging-bucket
